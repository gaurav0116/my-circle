<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        saved post
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <!-- Content here -->
            
            {{!-- ======= all post grid ======= --}}
            <div class="row row-cards">
            {{#log savedPosts.0.posted_user_info}}{{/log}}
            {{#if savedPosts}}
            {{#each savedPosts}}
                {{!-- ======= single post card ======= --}}
                <div class="col-sm-6 col-lg-4">
                    <div class="card card-sm">

                        {{!-- post title --}}
                        <div class="card-header">
                            <h3 class="card-title"> <b>Title</b> - {{postDetails.title}}</h3>
                        </div>

                        {{!-- post image --}}
                        <a href="#" class="d-block">
                            <img src="/uploads/posts/{{postDetails.postImage.name}}" class="card-img-top">
                        </a>
                        <div class="card-body">

                            {{!-- post description --}}
                            <div class="description pb-4 ">
                                <span class="h3"> description </span> - {{postDetails.description}}
                            </div>
                            <div class="d-flex align-items-center">

                                {{!-- post's user profile --}}
                                {{!-- <span class="avatar me-3 rounded"
                                    style="background-image: url(./static/avatars/000m.jpg)"></span> --}}

                                {{!-- user's name --}}
                                <div>
                                    <div> Posted By - <b>{{posted_user_info.firstName}} {{posted_user_info.lastName}}</b> </div>
                                    {{!-- <div class="text-muted">3 days ago</div> --}}
                                </div>

                                <div class="ms-auto">


                                    {{!-- edit post icon --}}
                                    {{!-- only edit user's own post  --}}
                                    {{#compare postBy "==" ../user._id}}
                                    <a href="#" id="edit-post-btn" data-post-id="{{_id}}"  class="text-muted" data-bs-toggle="modal" data-bs-target="#modal-report"  aria-label="edit post" data-bs-original-title="edit post" data-bs-target="#modal-report">
                                        <!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                            class="icon icon-tabler icon-tabler-photo-edit" width="24" height="24"
                                            viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                            stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M15 8h.01"></path>
                                            <path d="M11 20h-4a3 3 0 0 1 -3 -3v-10a3 3 0 0 1 3 -3h10a3 3 0 0 1 3 3v4">
                                            </path>
                                            <path d="M4 15l4 -4c.928 -.893 2.072 -.893 3 0l3 3"></path>
                                            <path d="M14 14l1 -1c.31 -.298 .644 -.497 .987 -.596"></path>
                                            <path d="M18.42 15.61a2.1 2.1 0 0 1 2.97 2.97l-3.39 3.42h-3v-3l3.42 -3.39z">
                                            </path>
                                        </svg>
                                        Edit
                                    </a>
                                    {{/compare}}

                                    {{!-- post save icon --}}
                                    <a href="#" class="ms-3 text-muted" data-bs-toggle="tooltip"
                                        data-bs-original-title="Save post">
                                        <!-- Download SVG icon from http://tabler-icons.io/i/heart -->
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                            class="icon icon-tabler icon-tabler-bookmark" width="24" height="24"
                                            viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                            stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M9 4h6a2 2 0 0 1 2 2v14l-5 -3l-5 3v-14a2 2 0 0 1 2 -2"></path>
                                        </svg>
                                        Save
                                    </a>

                                </div>

                            </div>
                        </div>
                </div>
                </div>
            {{/each}}
            {{else}}
                <h3>No post</h3>
            {{/if}}
            </div>
        </div>
    </div>