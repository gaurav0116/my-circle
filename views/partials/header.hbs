      </div>

      {{!-- user icon --}}
      <div class="nav-item dropdown mt-2 mr-4">
        <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown" aria-label="Open user menu">

          {{#if user.profilePicture}}
          <span class="avatar avatar-sm">
            <img src="./uploads/profilePicture/{{user.profilePicture.name}}" alt="user-avatar">
          </span>
          {{else}}
          <span class="avatar avatar-sm" style="background-image: url(./images/avatar.png)"></span>
          {{/if}}
          <div class="d-none d-xl-block ps-2">
            <div id="user-name">{{user.firstName}} {{user.lastName}}</div>
            <div id="user-email" class="mt-1 small text-muted">{{user.email}}</div>
          </div>
        </a>
        {{!-- Log out btn --}}
        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
          <a href="/profile" id="profile-btn" class="dropdown-item">Profile</a>
          <a href="/logout" id="logout-btn" class="dropdown-item">Logout</a>
        </div>
      </div>

    </div>
