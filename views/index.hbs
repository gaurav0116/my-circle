<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                {{!-- total posts --}}
                <div class="col">
                    <h2 class="page-title">
                        Posts
                    </h2>

                    <div class="text-muted mt-1">1-18 of {{totalPosts}} Posts</div>
                </div>

                {{!-- post Filter Drop down --}}
                <div class="col-2">
                    <select id="post-filter-drop-down" type="text" class="form-select" placeholder="Select a date" >
                        <option class="filter-option" value="all">All Post</option>
                        <option class="filter-option" value="mine">Mine</option>
                        <option class="filter-option" value="other">Others</option>
                    </select>
                </div>



                {{!-- search field --}}
                <div class="input-icon col-2">
                    <span class="input-icon-addon">
                        <!-- Download SVG icon from http://tabler-icons.io/i/search -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                            stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                            stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
                            <path d="M21 21l-6 -6"></path>
                        </svg>
                    </span>
                    <input id="search-post" name="searchPost" type="text"  class="form-control"
                        placeholder="Search postâ€¦" aria-label="Search in website">
                </div>

                {{!-- search post btn --}}
                <div class="col-1">
                    <a href="#" id="search-post-btn" class="btn btn-primary w-100">
                        Search
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            {{!-- ======= all post grid ======= --}}
            <div class="row row-cards">
                {{#if posts}}
                {{#each posts}}
                {{!-- ======= single post card ======= --}}
                <div class="col-sm-6 col-lg-4">
                    <div class="card card-sm">

                        {{!-- Post Header --}}
                        <div class="card-header">

                            {{!-- Post title --}}
                            <h3 class="card-title"> <b>{{title}}</b></h3>

                            {{!-- Archive post --}}
                            <div class="card-actions">
                                <div class="dropdown">
                                    <a href="#" class="btn-action dropdown-toggle" data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false"><!-- Download SVG icon from http://tabler-icons.io/i/dots-vertical -->
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                            viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                            stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                            <path d="M12 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                            <path d="M12 5m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                        </svg>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end">
                                        {{!-- Only archive & edit user own post --}}
                                        {{#compare postBy._id "==" ../user._id}}
                                        {{!-- archive btn --}}
                                        <a id="archive-post-btn" class="dropdown-item" href="#"
                                            data-post-id="{{_id}}">Archive</a>
                                        {{!-- edit post --}}
                                        <a id="edit-post-btn" class="dropdown-item" data-post-id="{{_id}}"
                                           data-bs-toggle="modal" data-bs-target="#modal-report" data-bs-original-title="edit post" href="#">Edit</a>
                                        {{/compare}}
                                        {{!-- id user loged in then show save btn --}}
                                        {{#if ../user}}
                                            {{#compare postBy._id "!=" ../user._id}}
                                                <a id="saved-post-btn" href="#" data-post-id="{{_id}}" class="dropdown-item "
                                                href="#">Save</a>
                                           {{/compare}}
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{!-- post image --}}
                        <a href="#" class="d-block">
                            <img src="/uploads/posts/{{postImage}}" class="card-img-top">
                        </a>
                        <div class="card-body">

                            {{!-- post description --}}
                            <div class="description pb-4 ">
                                {{description}}
                            </div>
                            <div class="d-flex align-items-center">

                                {{!-- post's user profile --}}
                                <img class="avatar me-3 rounded "
                                    src="./uploads/profilePicture/{{postBy.profilePicture.name}}" alt="user-avatar" />

                                {{!-- user's name --}}
                                <div>
                                    <div><b>{{postBy.firstName}} {{postBy.lastName}}</b> </div>

                                    {{!-- post Create Date --}}
                                    <div class="text-muted">{{moment createdAt}}</div>
                                </div>

                                <div class="ms-auto">


                                    {{!-- edit post icon --}}
                                    {{!-- only edit user's own post --}}
                                    {{!-- {{#compare postBy._id "==" ../user._id}}
                                    <a href="#" id="edit-post-btn" data-post-id="{{_id}}" class="text-muted"
                                        data-bs-toggle="modal" data-bs-target="#modal-report" aria-label="edit post"
                                        data-bs-original-title="edit post" data-bs-target="#modal-report">
                                        <!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                            class="icon icon-tabler icon-tabler-photo-edit" width="24" height="24"
                                            viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                            stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M15 8h.01"></path>
                                            <path d="M11 20h-4a3 3 0 0 1 -3 -3v-10a3 3 0 0 1 3 -3h10a3 3 0 0 1 3 3v4">
                                            </path>
                                            <path d="M4 15l4 -4c.928 -.893 2.072 -.893 3 0l3 3"></path>
                                            <path d="M14 14l1 -1c.31 -.298 .644 -.497 .987 -.596"></path>
                                            <path d="M18.42 15.61a2.1 2.1 0 0 1 2.97 2.97l-3.39 3.42h-3v-3l3.42 -3.39z">
                                            </path>
                                        </svg>
                                        Edit
                                    </a>
                                    {{/compare}} --}}

                                    {{!-- post save icon --}}
                                    {{!-- {{#if ../user}}
                                    <a id="saved-post-btn" href="#" data-post-id="{{_id}}" class="ms-3 text-muted"
                                        data-bs-toggle="tooltip" data-bs-original-title="Save post">
                                        <!-- Download SVG icon from http://tabler-icons.io/i/heart -->
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                            class="icon icon-tabler icon-tabler-bookmark" width="24" height="24"
                                            viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                            stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M9 4h6a2 2 0 0 1 2 2v14l-5 -3l-5 3v-14a2 2 0 0 1 2 -2"></path>
                                        </svg>
                                    </a>
                                    {{/if}} --}}

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

            {{!-- ========= Edit Post Modal ========== --}}
            <div class="modal modal-blur fade" id="modal-report" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                    <div id="model-content" class="modal-content">
                        {{!-- Modle title --}}
                        <div class="modal-header">
                            <h5 class="modal-title">Edit Post</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        {{!-- form --}}
                        <div class="edit-post-modal"></div>
                    </div>
                </div>
            </div>

            {{!-- ======= Pagination ======== --}}
            {{!-- <div class="d-flex">
                <ul class="pagination ms-auto">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                            <!-- Download SVG icon from http://tabler-icons.io/i/chevron-left -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M15 6l-6 6l6 6" />
                            </svg>
                            prev
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">
                            next <!-- Download SVG icon from http://tabler-icons.io/i/chevron-right -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M9 6l6 6l-6 6" />
                            </svg>
                        </a>
                    </li>
                </ul>
            </div> --}}

            {{else}}
            <h3>No post</h3>
            {{/if}}
        </div>
    </div>

</div>

