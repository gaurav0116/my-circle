<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                {{!-- Total user --}}
                <div class="col">
                    <h2 class="page-title">
                        Users
                    </h2>

                    <div class="text-muted mt-1">1-18 of {{totalUsers}} Users</div>

                    {{!-- Sarch btn --}}
                </div>
                <div class="input-icon col-2">
                    <span class="input-icon-addon">
                        <!-- Download SVG icon from http://tabler-icons.io/i/search -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                            stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                            stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
                            <path d="M21 21l-6 -6"></path>
                        </svg>
                    </span>
                    <input type="text" value="" class="form-control" placeholder="Searchâ€¦"
                        aria-label="Search in website">
                </div>

                {{!-- search btn --}}
                <div class="col-1">
                    <a href="#" id="search-user-btn" class="btn btn-primary w-100">
                        Search
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <!-- Content here -->

            {{!-- ========= all users cards grid ======== --}}
            <div class="row row-cards">
                {{!-- ======== signle user card ======== --}}
                {{#each usersList}}
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body p-4 text-center">

                            {{!-- user Profile pic --}}
                            {{#if profilePicture}}
                            <img src="./uploads/profilePicture/{{profilePicture.name}}"
                                class="avatar avatar-xl mb-3 rounded" alt="user-profile-pic">
                            {{else}}
                            <img src="./images/avatar.png" class="avatar avatar-xl mb-3 rounded" alt="user-profile-pic">
                            {{/if}}

                            {{!-- user name --}}
                            <h3 class="m-0 mb-1"><a href="#">{{firstName}} {{lastName}}</a></h3>

                            {{!-- user email --}}
                            <div class="text-muted">{{email}}</div>

                            {{!-- user Gender --}}
                            <div class="mt-3">
                                <span class="badge bg-purple-lt">{{gender}}</span>
                            </div>

                            {{!-- user saved no of post --}}
                            <div class="m-2"> <b>Post Saved -</b> {{totalSavedPost}}</div>

                            {{!-- user create no of post --}}
                            <div class="m-2"> <b>Post Created -</b> {{totalCreatedPost}}</div>

                            {{!-- user Joined Date --}}
                            <div class="m-2"> <b>Joined in -</b> {{moment createdAt}}</div>
                        </div>

                        {{!-- <div class="d-flex">
                            <a href="#" class="card-btn"><!-- Download SVG icon from http://tabler-icons.io/i/mail -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2 text-muted" width="24"
                                    height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                    stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                    <path
                                        d="M3 5m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z" />
                                    <path d="M3 7l9 6l9 -6" />
                                </svg>
                                Email</a>
                            <a href="#" class="card-btn"><!-- Download SVG icon from http://tabler-icons.io/i/phone -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2 text-muted" width="24"
                                    height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                    stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                    <path
                                        d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" />
                                </svg>
                                Call</a>
                        </div> --}}
                    </div>
                </div>
                {{/each}}
            </div>

            {{!-- ======== Pagination ======== --}}
            <div class="d-flex mt-4">
                <ul class="pagination ms-auto">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                            <!-- Download SVG icon from http://tabler-icons.io/i/chevron-left -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M15 6l-6 6l6 6" />
                            </svg>
                            prev
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">
                            next <!-- Download SVG icon from http://tabler-icons.io/i/chevron-right -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M9 6l6 6l-6 6" />
                            </svg>
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</div>
</div>